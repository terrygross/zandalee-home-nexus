
# Zandalee AI Desktop Configuration
# Copy this file to .env and customize your settings

# Core Daemon Settings
ZANDALEE_HOME=C:\Users\YourName\Documents\Zandalee
ZANDALEE_PORT=8759
ZANDALEE_BIND=127.0.0.1
VITE_ZANDALEE_API_BASE=http://127.0.0.1:8759

# Audio Configuration
ZANDALEE_MIC_DEVICE=
ZANDALEE_SAMPLERATE=16000
ZANDALEE_VAD_FRAME_MS=10
ZANDALEE_VAD_MODE=1
ZANDALEE_PREROLL_MS=500
ZANDALEE_SILENCE_HOLD_MS=5000
ZANDALEE_HALF_DUPLEX=1

# LLM Backend Configuration
LLM_BACKEND=ollama
OLLAMA_URL=http://127.0.0.1:11434
OLLAMA_MODEL=gemma3
META_API_KEY=
DEEPSEEK_MODEL=

# Data Storage
MEMORY_DB=%ZANDALEE_HOME%\config\memory.db
DIARY_DIR=%ZANDALEE_HOME%\diary

# Security
CORE_LAWS_PATH=%ZANDALEE_HOME%\security\core_laws.json
SECURITY_POLICY_PATH=%ZANDALEE_HOME%\security\policy.json

# UI Configuration
VITE_THEME=dark
VITE_SELF_TEST_ON_START=true
